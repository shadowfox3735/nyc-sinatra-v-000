<h2>Edit Historical Landmark</h2>

<!-- add content here -->
<form action="/landmarks/<%= @landmark.id %>" method="POST">
  <input type="hidden" name="_method" value="PATCH">
  <label for="name">Name</label>
  <input type="text" name="landmark[name]" id=":name" value="<%= @landmark.name %>"><br></br>
  
  <label for="year_completed">Year Completed</label>
  <input type="text" name="landmark[year_completed]" id="landmark_year_completed"
  value="<%=@landmark.year_completed %>"><br></br>
  
  <input type="submit" value="Edit Landmark">
</form>

<a class="button" href="/landmarks">Landmarks</a>

<form action="/figures/<%= @figure.id %>" method="POST">
  <input type=""
  <label for="name">Name</label>
  <input type="text" name="figure[name]" id="figure_name"><br></br>
  
  <label>Titles</label>
  <% Title.all.each do |title| %>
    <label><%= title.name %></label>
    <input type="checkbox" id="title_<%= title.id %>" name="figure[title_ids][]" value="<%= title.id %>"><br>
    
  <% end %>
  <label>Create New Title:</label>
  <input type="text" name="title[name]" id="new_title">
  
  <label>Landmarks</label>
  <% Landmark.all.each do |landmark| %>
    <label><%= landmark.name %></label>
    <input type="checkbox" id="landmark_<%= landmark.id %>" name="figure[landmark_ids][]" value="<%= landmark.id %>"><br>
  <% end %>
  <label>Create New Landmark:</label>
  <input type="text" name="landmark[name]" id="new_landmark">
  <input type="text" name="landmark[year_completed]">

  <input type="submit" value="Create New Figure">
</form>